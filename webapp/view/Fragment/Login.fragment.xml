<core:FragmentDefinition
	xmlns:core='sap.ui.core'
	xmlns='sap.m'>
		<Dialog
			resizable='true'
			draggable='true'
			title='{i18n>ttlLoginDialog}'
			class='sapUiSizeCompact'
		>
			<VBox
				class="sapUiSmallMargin">
				<Label
					required='true'
					text='{i18n>ttlEmail}'/>
				<Input
					type='Email'/> 
				<Label
					required='true'
					text='{i18n>ttlPassword}'/>
				<Input
                    type='Password'
					maxLength="20"/> 
			</VBox>
            <footer>
				<Toolbar>
						<Button
							text='{i18n>btnCloseDialog}'
							icon='{i18n>iClose}'
							press='onPressCloseCreateDialog'/>
							<ToolbarSpacer/>
						<Button
							text='{i18n>btnSaveMaterial}'
							icon='{i18n>iSave}'
							press='onPressSaveCreateMaterial'
							type="Emphasized"/>
				</Toolbar>
			</footer>
		</Dialog>
</core:FragmentDefinition>