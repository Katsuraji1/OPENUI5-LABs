<core:FragmentDefinition
	xmlns:core='sap.ui.core'
	xmlns='sap.m'>
		<Dialog
			validateFieldGroup='validateFieldGroupRegistration'
			beforeClose='beforeCloseHandler'
			resizable='true'
			draggable='true'
			id='registrationDialog'
			title='{i18n>ttlRegistrationDialog}'
			class='sapUiSizeCompact'
		>
			<VBox
				class="sapUiSmallMargin">
				<Label
					required='true'
					text='{i18n>lName}'/>
				<Input
					fieldGroupIds='input'
					maxLength="128"/> 
				<Label
					required='true'
					text='{i18n>lSurname}'/>
				<Input
					fieldGroupIds='input'
					maxLength="128"/> 
                <Label
					required='true'
					text='{i18n>lAge}'/>
				<Input
					fieldGroupIds='input'
                    type='Number'/>
			</VBox>
            <footer>
				<Toolbar>
						<Button
							text='{i18n>btnCloseDialog}'
							icon='{i18n>iClose}'
							press='onPressCloseCreateDialog'/>
							<ToolbarSpacer/>
						<Button
							id='registrationSaveBtn'
							text='{i18n>btnSaveMaterial}'
							icon='{i18n>iSave}'
							press='onpRressRegistrationSave'
							type="Emphasized"/>
				</Toolbar>
			</footer>
		</Dialog>
</core:FragmentDefinition>