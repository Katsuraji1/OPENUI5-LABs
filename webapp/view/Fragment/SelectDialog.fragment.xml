<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
    <SelectDialog
        class='sapUiResponsivePadding'
        contentWidth='400px'
        contentHeight='500px'
        draggable="true"
        growing="true"
        growingThreshold="15"
        noDataText="{i18n>ttlNoData}"
        resizable="true"
        title="{i18n>ttlSelectDialog}"
        items="{
            path: '/zjblessons_base_Materials'
        }"
    >
        <StandardListItem
            title="{MaterialText}"
            description="{MaterialDescription}"
			type="Active"
            iconInset="false"
            iconDensityAware="false"
        />
    </SelectDialog>
</c:FragmentDefinition>