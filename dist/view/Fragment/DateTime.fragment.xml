<core:FragmentDefinition
	xmlns:core='sap.ui.core'
	xmlns='sap.m'>
		<Dialog
            beforeClose='beforeCloseHandler'
            validateFieldGroup='validateFieldGroupRegistration'
			resizable='true'
			draggable='true'
            id='dateTimeDialog'
			title='{i18n>ttlTimeDateDialog}'
			class='sapUiSizeCompact'
		>
			<VBox
				class="sapUiSmallMargin">
                <DatePicker
                    fieldGroupIds='datePicker'
                    id="DP1"
                    placeholder="{i18n>phEnterDate}"
                    class="sapUiSmallMarginBottom"
                    valueFormat="dd/MM/y"
                    displayFormat="dd/MM/y"/>
                <TimePicker
                    fieldGroupIds='timePicker'
                    id="TP1"
                    placeholder="{i18n>phEnterTime}"
                    valueFormat="HH:mm:ss"
                    displayFormat="HH:mm:ss"
                />
                </VBox>
            <footer>
				<Toolbar>
						<Button
							text='{i18n>btnCloseDialog}'
							icon='{i18n>iClose}'
							press='onPressCloseCreateDialog'/>
							<ToolbarSpacer/>
						<Button
                            id='timeAndDateSaveBtn'
							text='{i18n>btnSaveMaterial}'
							icon='{i18n>iSave}'
							press='onpRressRegistrationSave'
							type="Emphasized"/>
				</Toolbar>
			</footer>
		</Dialog>
</core:FragmentDefinition>