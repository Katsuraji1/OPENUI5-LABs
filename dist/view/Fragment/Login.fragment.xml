<core:FragmentDefinition
	xmlns:core='sap.ui.core'
	xmlns='sap.m'>
		<Dialog
			beforeClose='beforeCloseHandler'
			resizable='true'
			draggable='true'
			validateFieldGroup = 'validateFieldGroupRegistration'
			title='{i18n>ttlLoginDialog}'
			class='sapUiSizeCompact'
		>
			<VBox
				class="sapUiSmallMargin">
				<Label
					required='true'
					text='{i18n>lEmail}'/>
				<Input
					fieldGroupIds='inputEmail'
					type='Email'/> 
				<Label
					required='true'
					text='{i18n>lPassword}'/>
				<Input
					fieldGroupIds='input'
                    type='Password'
					maxLength="20"/> 
			</VBox>
            <footer>
				<Toolbar>
						<Button
							text='{i18n>btnCloseDialog}'
							icon='{i18n>iClose}'
							press='onPressCloseCreateDialog'/>
							<ToolbarSpacer/>
						<Button
							text='{i18n>btnSaveMaterial}'
							icon='{i18n>iSave}'
							press='onpRressRegistrationSave'
							type="Emphasized"/>
				</Toolbar>
			</footer>
		</Dialog>
</core:FragmentDefinition>